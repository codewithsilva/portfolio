generator client {
  provider = "prisma-client-js"
  output   = "./node_modules/@prisma/client"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(uuid())
  name      String
  email     String   @unique
  password  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relations
  companies Company[]
}

model Company {
  id         String     @id @default(uuid())
  name       String
  ratingType RatingType
  imageUrl   String
  createdAt  DateTime   @default(now())
  updatedAt  DateTime   @updatedAt

  // Foreign key to User (optional)
  userId String? // Made optional
  user   User?   @relation(fields: [userId], references: [id])

  // Relations to questions and ratings
  questions Question[]
  ratings   Rating[]
}

model Question {
  id        Int      @id @default(autoincrement())
  question  String
  companyId String? // Made optional
  company   Company? @relation(fields: [companyId], references: [id])

  ratings Rating[] // This reflects the reverse relationship with Rating
}

model Rating {
  id        String   @id @default(uuid())
  rating    Int
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Foreign keys (optional)
  companyId String? // Made optional
  company   Company? @relation(fields: [companyId], references: [id])

  questionId Int? // Made optional (nullable)
  question   Question? @relation(fields: [questionId], references: [id])
}

enum RatingType {
  ZERO_TO_FIVE
  ZERO_TO_TEN
  EMOJIS
  STARS
}
