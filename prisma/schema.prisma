datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id        String     @id @default(uuid())
  name      String
  email     String     @unique
  password  String
  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt
  companies Company[]
  questions Question[]
}

model Company {
  id          String     @id @default(uuid())
  name        String
  ratingType  RatingType
  imageUrl    String
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt
  userId      String?
  user        User?      @relation(fields: [userId], references: [id])
  questions   Question[]
  ratings     Rating[]
}

model Question {
  id        Int      @id @default(autoincrement())
  question  String
  companyId String?
  company   Company? @relation(fields: [companyId], references: [id])
  userId    String?
  user      User?    @relation(fields: [userId], references: [id])
  ratings   Rating[]
}

model Rating {
  id          String     @id @default(uuid())
  rating      Int
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt
  companyId   String?
  company     Company?   @relation(fields: [companyId], references: [id])
  questionId  Int?
  question    Question?  @relation(fields: [questionId], references: [id])
}

enum RatingType {
  ZERO_TO_FIVE
  ZERO_TO_TEN
  EMOJIS
  STARS
}